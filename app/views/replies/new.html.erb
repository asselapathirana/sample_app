<h1>New reply</h1>

<% form_for(@reply) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :micropost_id %><br />
    <%= f.text_field :micropost_id %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', replies_path %>